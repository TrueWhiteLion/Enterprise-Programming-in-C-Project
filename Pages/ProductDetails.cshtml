@page "{id:int}"
@model Enterprise_Programming_in_C_Project.Pages.ProductDetailsModel
@{
    ViewData["Title"] = "Product Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="container">
            <a href="/" class="nav-brand">SA Online Mart</a>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/Cart">Cart</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        <div class="container">
            <h2>@Model.Product.Name</h2>
            <div class="product-detail">
                <img src="@Model.Product.ImageUrl" alt="@Model.Product.Name">
                <p>@Model.Product.Description</p>
                <p>Price: R @Model.Product.Price</p>
            </div>
            <a href="/Cart" class="btn">Add to Cart</a>
        </div>
    </main>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2024 SA Online Mart. Proudly South African.</p>
        </div>
    </footer>
</body>
</html>
