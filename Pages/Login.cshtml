@page
@model Enterprise_Programming_in_C_Project.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="container">
            <a href="/" class="nav-brand">SA Online Mart</a>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/Cart">Cart (@Model.CartItemCount)</a></li>
                <li><a href="/Login">Login</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        <div class="container">
            <h2>Login</h2>
            <form method="post">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" required />

                <label for="password">Password</label>
                <input type="password" id="password" name="password" required />

                <button type="submit" class="btn">Login</button>
            </form>

            @if (!Model.IsLoginValid)
            {
                <div class="alert alert-danger">
                    Invalid username or password.
                </div>
            }
        </div>
    </main>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2024 SA Online Mart. Proudly South African.</p>
        </div>
    </footer>
</body>
</html>
