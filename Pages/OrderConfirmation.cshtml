@page
@model Enterprise_Programming_in_C_Project.Pages.OrderConfirmationModel
@{
    ViewData["Title"] = "Order Confirmation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="container">
            <a href="/" class="nav-brand">SA Online Mart</a>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/Cart">Cart (@Model.CartItemCount)</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        <div class="container">
            <h2>Order Confirmation</h2>
            <p>Your order has been placed successfully. Thank you for shopping with us!</p>
            <a href="/" class="btn">Back to Home</a>
        </div>
    </main>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2024 SA Online Mart. Proudly South African.</p>
        </div>
    </footer>
</body>
</html>
