@page
@model Enterprise_Programming_in_C_Project.Pages.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="container">
            <a href="/" class="nav-brand">SA Online Mart</a>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/Login">Login</a></li>
                <li><a href="/Cart">Cart (@Model.CartItemCount)</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        <div class="container">
            <h2>Checkout</h2>

            @if (Model.CartItems.Any())
            {
                <form method="post">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CartItems)
                            {
                                <tr>
                                    <td>@item.Product.Name</td>
                                    <td>@item.Quantity</td>
                                    <td>R @item.Product.Price</td>
                                    <td>R @(item.Product.Price * item.Quantity)</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3">Total</td>
                                <td>R @Model.TotalAmount</td>
                            </tr>
                        </tfoot>
                    </table>

                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" id="name" name="Name" value="@Model.Name" required />
                    </div>

                    <div class="form-group">
                        <label for="address">Address:</label>
                        <input type="text" id="address" name="Address" value="@Model.Address" required />
                    </div>

                    <div class="form-group">
                        <label for="city">City:</label>
                        <input type="text" id="city" name="City" value="@Model.City" required />
                    </div>

                    <div class="form-group">
                        <label for="postalCode">Postal Code:</label>
                        <input type="text" id="postalCode" name="PostalCode" value="@Model.PostalCode" required />
                    </div>

                    <button type="submit" class="btn">Complete Purchase</button>
                </form>
            }
            else
            {
                <p>Your cart is empty. Add items to the cart before checking out.</p>
            }
        </div>
    </main>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2024 SA Online Mart. Proudly South African.</p>
        </div>
    </footer>
</body>
</html>
